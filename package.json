{
  "name": "timrjs",
  "version": "2.0.0",
  "description": "Timr is a simple utility for creating timers in JavaScript.",
  "license": "MIT",
  "repository": "github:joesmith100/timrjs",
  "bugs": "https://github.com/joesmith100/timrjs/issues",
  "keywords": [
    "timr",
    "timer",
    "timrjs",
    "utility",
    "stopwatch",
    "date"
  ],
  "author": "Joe Smith <joesmith0488@gmail.com>",
  "main": "lib/index.js",
  "unpkg": "dist/timr.js",
  "module": "es/timr.js",
  "types": "types/index.d.ts",
  "scripts": {
    "clean": "rimraf dist lib es coverage types",
    "lint": "ts-standard --fix \"src/**/*.ts\" \"test/**/*.js\"",
    "test": "jest",
    "test:watch": "yarn test --watch",
    "coveralls": "yarn check:coverage && cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js && rm -rf ./coverage",
    "check:src": "yarn lint && yarn test",
    "check:coverage": "yarn test --coverage",
    "build": "webpack --progress --color",
    "prepublish": "yarn clean && yarn check:src && yarn build"
  },
  "devDependencies": {
    "@babel/core": "^7.13.13",
    "@babel/plugin-proposal-class-properties": "^7.13.0",
    "@babel/preset-env": "^7.13.12",
    "@babel/preset-typescript": "^7.13.0",
    "@types/jest": "^26.0.22",
    "coveralls": "^3.0.2",
    "jest": "^26.6.3",
    "rimraf": "^3.0.2",
    "ts-loader": "^8.1.0",
    "ts-standard": "^10.0.0",
    "typescript": "^4.2.3",
    "webpack": "^5.28.0",
    "webpack-cli": "^4.5.0"
  },
  "ts-standard": {
    "globals": [
      "expect",
      "describe",
      "test",
      "jest",
      "afterEach"
    ]
  },
  "jest": {
    "setupFilesAfterEnv": [
      "./test/_jestSetup.js"
    ],
    "coveragePathIgnorePatterns": [
      "./node_modules",
      "./test"
    ]
  }
}
