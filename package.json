{
  "name": "timrjs",
  "version": "2.0.0",
  "description": "Timr is a simple utility for creating timers in JavaScript.",
  "main": "lib/index.js",
  "scripts": {
    "clean": "rimraf dist/ && rimraf lib/",
    "lint": "standard --fix \"src/**/*.js test/**/*.js\"",
    "test": "jest",
    "test:watch": "yarn test -- --watch",
    "coveralls": "yarn run check:coverage && cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js && rm -rf ./coverage",
    "check:src": "yarn run lint && yarn run test",
    "check:coverage": "yarn run test -- --coverage",
    "build:commonjs": "NODE_ENV=development babel src --out-dir lib",
    "build:umd": "webpack --env.development --progress --colors",
    "build:umd:min": "webpack --env.production --progress --colors",
    "build": "yarn run build:commonjs && yarn run build:umd && yarn run build:umd:min",
    "prepublish": "yarn run clean && yarn run check:src && yarn run build"
  },
  "keywords": [
    "timr",
    "timer",
    "timrjs",
    "utility",
    "countdown",
    "stopwatch",
    "date"
  ],
  "bugs": {
    "url": "https://github.com/joesmith100/timrjs/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/joesmith100/timrjs.git"
  },
  "author": "Joe Smith <joesmith0488@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-core": "^6.24.1",
    "babel-loader": "^7.0.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-preset-latest": "^6.24.1",
    "babel-register": "^6.24.1",
    "coveralls": "^2.13.1",
    "jest": "^20.0.4",
    "rimraf": "^2.6.1",
    "standard": "^10.0.2",
    "webpack": "^2.6.1",
    "webpack-config-utils": "^2.3.0"
  },
  "dependencies": {
    "object-assign": "^4.1.1"
  },
  "standard": {
    "globals": [
      "expect",
      "describe",
      "test"
    ]
  },
  "jest": {
    "setupTestFrameworkScriptFile": "./test/_jestSetup.js"
  }
}
