{
  "name": "timrjs",
  "version": "2.0.0",
  "description": "Timr is a simple utility for creating timers in JavaScript.",
  "main": "lib/index.js",
  "scripts": {
    "clean": "rimraf dist/ && rimraf lib/ && rimraf coverage/",
    "lint": "standard --fix \"src/**/*.js test/**/*.js\"",
    "test": "jest",
    "test:watch": "yarn test -- --watch",
    "coveralls": "yarn check:coverage && cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js && rm -rf ./coverage",
    "check:src": "yarn lint && yarn test",
    "check:coverage": "yarn test -- --coverage",
    "build:commonjs": "cross-env NODE_ENV=development babel src --out-dir lib",
    "build:umd": "webpack --mode development --progress --colors",
    "build:umd:min": "webpack --mode production --progress --colors",
    "build": "yarn build:commonjs && yarn build:umd && yarn build:umd:min",
    "prepublish": "yarn clean && yarn check:src && yarn build"
  },
  "keywords": [
    "timr",
    "timer",
    "timrjs",
    "utility",
    "countdown",
    "stopwatch",
    "date"
  ],
  "bugs": {
    "url": "https://github.com/joesmith100/timrjs/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/joesmith100/timrjs.git"
  },
  "author": "Joe Smith <joesmith0488@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "7.1.5",
    "@babel/core": "7.1.5",
    "@babel/plugin-transform-object-assign": "^7.0.0",
    "@babel/preset-env": "7.1.5",
    "@babel/register": "7.0.0",
    "babel-core": "7.0.0-bridge.0",
    "babel-loader": "^8.0.4",
    "coveralls": "^3.0.2",
    "cross-env": "^5.2.0",
    "jest": "^23.6.0",
    "rimraf": "^2.6.2",
    "standard": "^12.0.1",
    "webpack": "^4.25.1",
    "webpack-cli": "^3.1.2",
    "webpack-config-utils": "^2.3.1"
  },
  "resolutions": {
    "babel-core": "7.0.0-bridge.0"
  },
  "standard": {
    "globals": [
      "expect",
      "describe",
      "test"
    ]
  },
  "jest": {
    "setupTestFrameworkScriptFile": "./test/_jestSetup.js",
    "coveragePathIgnorePatterns": [
      "./node_modules",
      "./test"
    ]
  }
}
