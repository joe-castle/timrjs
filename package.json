{
  "name": "timrjs",
  "version": "0.0.0-development",
  "description": "Timr is a simple utility for creating timers in JavaScript.",
  "license": "MIT",
  "repository": "github:joesmith100/timrjs",
  "bugs": "https://github.com/joesmith100/timrjs/issues",
  "keywords": [
    "timr",
    "timer",
    "timrjs",
    "utility",
    "stopwatch",
    "counbtdown",
    "date"
  ],
  "author": "Joe Smith <joesmith0488@gmail.com>",
  "main": "lib/timr.js",
  "unpkg": "dist/timr.js",
  "module": "es/timr.js",
  "types": "types/index.d.ts",
  "scripts": {
    "clean": "rimraf dist lib es coverage types",
    "lint": "ts-standard --fix \"src/**/*.ts\" \"test/**/*.js\"",
    "test": "jest",
    "test:watch": "npm run test -- --watch",
    "coveralls": "npm run check:coverage && cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js && rm -rf ./coverage",
    "check:src": "npm run lint && npm test",
    "check:coverage": "npm test -- --coverage",
    "build": "rollup -c",
    "cm": "cz",
    "prepublish": "npm run clean && npm run check:src && npm run build",
    "prepare": "husky install",
    "semantic-release": "semantic-release"
  },
  "devDependencies": {
    "@babel/core": "^7.13.13",
    "@babel/plugin-proposal-class-properties": "^7.13.0",
    "@babel/preset-env": "^7.13.12",
    "@babel/preset-typescript": "^7.13.0",
    "@commitlint/cli": "^12.1.1",
    "@commitlint/config-conventional": "^12.1.1",
    "@types/jest": "^26.0.22",
    "coveralls": "^3.0.2",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "rimraf": "^3.0.2",
    "rollup": "^2.44.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.30.0",
    "semantic-release": "^17.4.2",
    "ts-loader": "^8.1.0",
    "ts-standard": "^10.0.0",
    "typescript": "^4.2.3"
  },
  "ts-standard": {
    "globals": [
      "expect",
      "describe",
      "test",
      "jest",
      "afterEach"
    ]
  },
  "jest": {
    "setupFilesAfterEnv": [
      "./test/_jestSetup.js"
    ],
    "coveragePathIgnorePatterns": [
      "./node_modules",
      "./test"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
