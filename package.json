{
  "name": "timrjs",
  "version": "2.0.0",
  "description": "Timr is a simple utility for creating timers in JavaScript.",
  "main": "lib/index.js",
  "scripts": {
    "clean": "rimraf dist lib coverage _typescript",
    "lint": "ts-standard --fix \"src/**/*.ts\" \"test/**/*.js\"",
    "test": "jest",
    "test:watch": "yarn test --watch",
    "coveralls": "yarn check:coverage && cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js && rm -rf ./coverage",
    "check:src": "yarn lint && yarn test && yarn check:types",
    "check:types": "yarn tsc --noEmit && rimraf _typescript",
    "check:coverage": "yarn test --coverage",
    "build:commonjs": "babel src --out-dir lib --extensions \".ts\"",
    "build:umd": "webpack --mode development --progress --color",
    "build:umd:min": "webpack --mode production --progress --color",
    "build": "yarn build:commonjs && yarn build:umd && yarn build:umd:min",
    "prepublish": "yarn clean && yarn check:src && yarn build"
  },
  "keywords": [
    "timr",
    "timer",
    "timrjs",
    "utility",
    "stopwatch",
    "date"
  ],
  "bugs": {
    "url": "https://github.com/joesmith100/timrjs/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/joesmith100/timrjs.git"
  },
  "author": "Joe Smith <joesmith0488@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "7.13.10",
    "@babel/core": "7.13.10",
    "@babel/plugin-proposal-class-properties": "^7.13.0",
    "@babel/plugin-transform-object-assign": "^7.0.0",
    "@babel/preset-env": "7.13.12",
    "@babel/preset-typescript": "^7.13.0",
    "@babel/register": "7.13.8",
    "@types/jest": "^26.0.22",
    "babel-loader": "^8.0.4",
    "coveralls": "^3.0.2",
    "jest": "^26.6.3",
    "rimraf": "^3.0.2",
    "ts-standard": "^10.0.0",
    "typescript": "^4.2.3",
    "webpack": "^5.28.0",
    "webpack-cli": "^4.5.0",
    "webpack-config-utils": "^2.3.1"
  },
  "ts-standard": {
    "globals": [
      "expect",
      "describe",
      "test",
      "jest",
      "afterEach"
    ]
  },
  "jest": {
    "setupFilesAfterEnv": [
      "./test/_jestSetup.js"
    ],
    "coveragePathIgnorePatterns": [
      "./node_modules",
      "./test"
    ]
  }
}
